# SignalForge Docker Environment Configuration
# Copy this file to .env and configure your settings

# Database Configuration
DB_URL=sqlite:////app/data/signalforge.db
# For PostgreSQL (uncomment postgres service in docker-compose.yml):
# DB_URL=postgresql://signalforge:signalforge123@postgres:5432/signalforge

# Telegram Alerts (Optional)
ENABLE_ALERTS=false
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Alert Settings
ALERT_THRESHOLD=70

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/signalforge.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Scheduler Settings
COLLECTION_INTERVAL=3600

# PostgreSQL Password (if using PostgreSQL)
# POSTGRES_PASSWORD=signalforge123
